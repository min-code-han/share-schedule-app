{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["es6", "dom"],
    "jsx": "react"
  },
  "typeRoots": ["images"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
